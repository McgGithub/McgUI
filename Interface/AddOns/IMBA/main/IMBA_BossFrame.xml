<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="IMBA_BossFrame.lua"/>

	<Frame name="IMBA_BossFrame" parent="UIParent" enableMouse="true" movable="true" hidden="true" frameStrata="HIGH">
		<Size>
			<AbsDimension x="200" y="275"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop name="$parentBackdrop" bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<Frame name="$parent_MainTitle" inherits="IMBA_MainTitleTemplate">
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parent_Title1" inherits="IMBA_TitleTemplate"/>
			<Frame name="$parent_Title2" inherits="IMBA_TitleTemplate"/>
			<Frame name="$parent_Title3" inherits="IMBA_TitleTemplate"/>
			<Frame name="$parent_Title4" inherits="IMBA_TitleTemplate"/>
			<Frame name="$parent_Text1" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text2" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text3" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text4" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text5" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text6" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text7" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text8" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text9" inherits="IMBA_TextTemplate"/>
			<Frame name="$parent_Text10" inherits="IMBA_TextTemplate"/>
			<StatusBar name="$parent_Timer1" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer2" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer3" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer4" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer5" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer6" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer7" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer8" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer9" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_Timer10" inherits="IMBA_BarTimerTemplate"/>
			<StatusBar name="$parent_NameHealth1" inherits="IMBA_NameHealthTemplate"/>
			<StatusBar name="$parent_NameHealth2" inherits="IMBA_NameHealthTemplate"/>
			<StatusBar name="$parent_NameHealth3" inherits="IMBA_NameHealthTemplate"/>
			<StatusBar name="$parent_NameHealth4" inherits="IMBA_NameHealthTemplate"/>
			<StatusBar name="$parent_NameHealth5" inherits="IMBA_NameHealthTemplate"/>
			<StatusBar name="$parent_UnitHealth1" inherits="IMBA_UnitHealthTemplate"/>
			<StatusBar name="$parent_UnitHealth2" inherits="IMBA_UnitHealthTemplate"/>
			<StatusBar name="$parent_UnitHealth3" inherits="IMBA_UnitHealthTemplate"/>
			<StatusBar name="$parent_UnitHealth4" inherits="IMBA_UnitHealthTemplate"/>
			<StatusBar name="$parent_UnitHealth5" inherits="IMBA_UnitHealthTemplate"/>

			<Frame name="$parent_Close" enableMouse="true">
				<Size>
					<AbsDimension x="24" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parent_Image" file="Interface\AddOns\IMBA\textures\close.blp">
							<Size>
								<AbsDimension x="32" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="TOPRIGHT"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						this:SetBackdropBorderColor(1, 1, 1, 1);
						this:SetBackdropColor(0.0,0.0,0.0,0);
					</OnLoad>
					<OnMouseDown>
						IMBA_BossFrame:Hide();
					</OnMouseDown>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				IMBA_BossFrame_OnLoad();
			</OnLoad>
			<OnEvent>
				if IMBA_BossFrame_OnEvent then
					IMBA_BossFrame_OnEvent(event);
				end
			</OnEvent>
			<OnMouseUp>
			 if ( this.isMoving ) then
			  this:StopMovingOrSizing();
			  this.isMoving = false;
			 end
			</OnMouseUp>
			<OnMouseDown>
			 if ( ( ( not this.isLocked ) or ( this.isLocked == 0 ) ) and ( arg1 == "LeftButton" ) ) then
			  this:StartMoving();
			  this.isMoving = true;
			 end
			</OnMouseDown>
			<OnShow>
				if IMBA_BossFrame_RegisterEvents then
					IMBA_BossFrame_RegisterEvents();
				end
			</OnShow>
			<OnHide>
				if IMBA_BossFrame_UnregisterEvents then
					IMBA_BossFrame_UnregisterEvents();
				end
			 if ( this.isMoving ) then
			  this:StopMovingOrSizing();
			  this.isMoving = false;
			 end
			</OnHide>
			<OnUpdate>
				if IMBA_BossFrame_OnUpdate then
					IMBA_BossFrame_OnUpdate()
				end
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>